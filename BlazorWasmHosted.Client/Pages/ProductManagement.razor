                Console.WriteLine($"  - HasErrors: {product.HasErrors}");
                Console.WriteLine($"  - Id errors: {string.Join(", ", product.GetErrors("Id").Cast<string>())}");
                Console.WriteLine($"  - SupplierId errors: {string.Join(", ", product.GetErrors("SupplierId").Cast<string>())}");
            }

            Console.WriteLine($"\n✅ Injected errors to {Math.Min(3, listData.Count)} products");
            Console.WriteLine("Check console for details. FlexGrid should auto-update!");
            
            // Refresh UI
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error during test: {ex.Message}");
            Console.WriteLine(ex.StackTrace);
        }
    }

    /// <summary>
