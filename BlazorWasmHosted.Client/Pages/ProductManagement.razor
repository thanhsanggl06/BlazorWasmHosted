                                    <path d=""M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zM7 4h2v5H7V4zm0 6h2v2H7v-2z""/>
                                  </svg>");
                            builder.AddContent(13, $"L?i Validation ({validationResults.Count})");
                            builder.CloseElement();

                            // Content
