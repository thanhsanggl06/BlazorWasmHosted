    // Dictionary[itemIndex][propertyName] = List<errorMessages>
    public Dictionary<int, Dictionary<string, List<string>>> GetErrorsByIndexAndProperty(List<ProductDtoTest> items)
    {
        var result = new Dictionary<int, Dictionary<string, List<string>>>();

        for (int i = 0; i < items.Count; i++)
        {
            var item = items[i];

            if (item.HasErrors)
            {
                // Tạo dictionary cho item này
                var itemErrors = new Dictionary<string, List<string>>();

                foreach (var validationResult in item.GetErrors())
                {
                    foreach (var propertyName in validationResult.MemberNames)
                    {
                        // Nếu property chưa có thì tạo mới
                        if (!itemErrors.ContainsKey(propertyName))
                        {
                            itemErrors[propertyName] = new List<string>();
                        }

                        // Thêm error message
                        itemErrors[propertyName].Add(validationResult.ErrorMessage);
                    }
                }

                // Lưu vào result với key là index
                result[i] = itemErrors;
            }
        }

        return result;
    }

    public List<string> GetAllErrorMessages(Dictionary<int, Dictionary<string, List<string>>> errors)
    {
        return errors
            .SelectMany(item => item.Value)
            .SelectMany(prop => prop.Value)
            .ToList();
    }

