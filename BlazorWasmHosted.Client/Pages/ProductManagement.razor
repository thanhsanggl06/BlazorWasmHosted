    private async Task ValidateAllProducts()
    {
        try
        {
            // 1. Load supplier IDs t? API (ch? 1 l?n)
            var supplierIds = await Http.GetFromJsonAsync<List<int>>("api/suppliers/ids");
            if (supplierIds == null || !supplierIds.Any())
